<div id="header">
  <h1 class="title"><a href="/">Obsqure.net</a></h1>

  <span id="user-menu">
    <% if user_signed_in? %>
      <ul>
        <li><b><%= link_to current_user.username, :account %>:</b></li>
        <li><%= link_to "Update Details", edit_user_registration_path %></li>
        <li><%= link_to "Log Out", :sign_out %></li>
      </ul>
    <% end %>
  </span>
  <span id="menu">
    <ul>
      <% if user_signed_in? %>
        <li class="selected"><%= link_to "Addresses", :addresses %></li>
        <li><%= link_to "Aliases", :aliases %></li>
      <% else %>
        <li><%= link_to "Sign In", :new_user_session %></li>
        <li><%= link_to "Register", :new_user_registration %></li>
      <% end %>
    </ul>
  </span>

</div>
